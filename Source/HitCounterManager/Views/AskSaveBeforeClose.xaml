<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:common="clr-namespace:HitCounterManager.Common;assembly=HitCounterManager"
        xmlns:local="clr-namespace:HitCounterManager.ViewModels;assembly=HitCounterManager"
        x:Class="HitCounterManager.Views.AskSaveBeforeClosePage"
        x:DataType="local:AskSaveBeforeClosePageViewModel"
        Icon="/Resources/FireIcon.ico"
        Title="{x:Static common:Statics.ApplicationTitle}" Classes="DialogWindow"
        MinWidth="500" MinHeight="130" Width="500" Height="130">

    <Window.DataContext>
        <local:AskSaveBeforeClosePageViewModel />
    </Window.DataContext>

    <StackPanel Margin="10" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Stretch">
        <TextBlock Margin="0,0,0,5" Text="Do you want to save this session?" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial" FontSize="14" FontWeight="Bold" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <Button Margin="20" Width="100" Content="Yes" Command="{Binding Submit}" HorizontalAlignment="Right" FontWeight="Bold">
                <Button.CommandParameter>
                    <x:Boolean>True</x:Boolean>
                </Button.CommandParameter>
            </Button>
            <Button Margin="20" Width="100" Content="No" Command="{Binding Submit}" HorizontalAlignment="Right">
                <Button.CommandParameter>
                    <x:Boolean>False</x:Boolean>
                </Button.CommandParameter>
            </Button>
            <Button Margin="20" Width="100" Content="Cancel" Command="{Binding $parent[Window].Close}" HorizontalAlignment="Right" />
        </StackPanel>
    </StackPanel>
</Window>
