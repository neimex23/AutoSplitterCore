<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:common="clr-namespace:HitCounterManager.Common;assembly=HitCounterManager"
        xmlns:local="clr-namespace:HitCounterManager.ViewModels;assembly=HitCounterManager"
        x:Class="HitCounterManager.Views.AboutPage"
        Icon="/Resources/FireIcon.ico"
        Title="About" Classes="DialogWindow"
        MinWidth="420" MinHeight="380" Width="800" Height="630">

    <Window.DataContext>
        <local:ViewModelWindowBase />
    </Window.DataContext>

    <DockPanel Margin="10">
        <TextBlock DockPanel.Dock="Top"    Margin="20" Text="{x:Static common:Statics.ApplicationTitle}" HorizontalAlignment="Center" FontWeight="Bold"/>
        <Button    DockPanel.Dock="Bottom" Margin="20" Width="200" Content="OK" Command="{Binding $parent[Window].Close}" HorizontalAlignment="Right"/>

        <Border Padding="2" Classes="InfoBoxBorder">
            <ScrollViewer Padding="0,0,30,0" AllowAutoHide="false">
                <TextBox TextWrapping="Wrap" Padding="5" IsReadOnly="true" Text="{common:StringFromManifest Resource=.THIRDPARTYLICENSEREADME}" />
            </ScrollViewer>
        </Border>
    </DockPanel>
</Window>
