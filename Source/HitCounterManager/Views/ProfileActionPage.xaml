<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:HitCounterManager.ViewModels;assembly=HitCounterManager.PCL"
        x:Class="HitCounterManager.Views.ProfileActionPage"
        x:DataType="vm:ProfileActionPageViewModel">

	<UserControl.DataContext>
        <vm:ProfileActionPageViewModel />
    </UserControl.DataContext>

    <StackPanel Margin="10" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TextBlock Margin="0,0,0,5" Text="Action..." HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial" FontSize="14" FontWeight="Bold">
            <Interaction.Behaviors>
                <DataTriggerBehavior Binding="{Binding Action}" ComparisonCondition="Equal" Value="{x:Static vm:ProfileAction.Create}">
                    <ChangePropertyAction TargetObject="{Binding $parent[TextBlock]}" PropertyName="Text" Value="Creating a new profile..." />
                </DataTriggerBehavior>
                <DataTriggerBehavior Binding="{Binding Action}" ComparisonCondition="Equal" Value="{x:Static vm:ProfileAction.Rename}">
                    <ChangePropertyAction TargetObject="{Binding $parent[TextBlock]}" PropertyName="Text" Value="Renaming a profile..." />
                </DataTriggerBehavior>
                <DataTriggerBehavior Binding="{Binding Action}" ComparisonCondition="Equal" Value="{x:Static vm:ProfileAction.Copy}">
                    <ChangePropertyAction TargetObject="{Binding $parent[TextBlock]}" PropertyName="Text" Value="Copying a profile..." />
                </DataTriggerBehavior>
                <DataTriggerBehavior Binding="{Binding Action}" ComparisonCondition="Equal" Value="{x:Static vm:ProfileAction.Delete}">
                    <ChangePropertyAction TargetObject="{Binding $parent[TextBlock]}" PropertyName="Text" Value="Deleting a profile..." />
                </DataTriggerBehavior>
            </Interaction.Behaviors>
        </TextBlock>

        <TextBlock Margin="0,5,0,5" Text="Previous:" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Interaction.Behaviors>
                <DataTriggerBehavior Binding="{Binding Action}" ComparisonCondition="Equal" Value="{x:Static vm:ProfileAction.Create}">
                    <ChangePropertyAction TargetObject="{Binding $parent[TextBlock]}" PropertyName="Text" Value="Currently selected:" />
                </DataTriggerBehavior>
                <DataTriggerBehavior Binding="{Binding Action}" ComparisonCondition="Equal" Value="{x:Static vm:ProfileAction.Rename}">
                    <ChangePropertyAction TargetObject="{Binding $parent[TextBlock]}" PropertyName="Text" Value="Current name:" />
                </DataTriggerBehavior>
                <DataTriggerBehavior Binding="{Binding Action}" ComparisonCondition="Equal" Value="{x:Static vm:ProfileAction.Copy}">
                    <ChangePropertyAction TargetObject="{Binding $parent[TextBlock]}" PropertyName="Text" Value="Origin name:" />
                </DataTriggerBehavior>
                <DataTriggerBehavior Binding="{Binding Action}" ComparisonCondition="Equal" Value="{x:Static vm:ProfileAction.Delete}">
                    <ChangePropertyAction TargetObject="{Binding $parent[TextBlock]}" PropertyName="Text" Value="The currently selected profile will be deleted:" />
                </DataTriggerBehavior>
            </Interaction.Behaviors>
        </TextBlock>
        <TextBlock Margin="20,0,0,0" Text="{Binding Origin.ProfileSelected.Name, Mode=OneWay}" FontWeight="Bold" HorizontalAlignment="Stretch" VerticalAlignment="Center" />

        <TextBlock Margin="0,5,0,5" Text="Next:" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Interaction.Behaviors>
                <DataTriggerBehavior Binding="{Binding Action}" ComparisonCondition="Equal" Value="{x:Static vm:ProfileAction.Create}">
                    <ChangePropertyAction TargetObject="{Binding $parent[TextBlock]}" PropertyName="Text" Value="Name of new profile:" />
                </DataTriggerBehavior>
                <DataTriggerBehavior Binding="{Binding Action}" ComparisonCondition="Equal" Value="{x:Static vm:ProfileAction.Rename}">
                    <ChangePropertyAction TargetObject="{Binding $parent[TextBlock]}" PropertyName="Text" Value="New profile name:" />
                </DataTriggerBehavior>
                <DataTriggerBehavior Binding="{Binding Action}" ComparisonCondition="Equal" Value="{x:Static vm:ProfileAction.Copy}">
                    <ChangePropertyAction TargetObject="{Binding $parent[TextBlock]}" PropertyName="Text" Value="Copied profile name:" />
                </DataTriggerBehavior>
                <DataTriggerBehavior Binding="{Binding Action}" ComparisonCondition="Equal" Value="{x:Static vm:ProfileAction.Delete}">
                    <ChangePropertyAction TargetObject="{Binding $parent[TextBlock]}" PropertyName="Text" Value="Are you sure that the profile shall be deleted?" />
                </DataTriggerBehavior>
            </Interaction.Behaviors>
        </TextBlock>
        <TextBox Margin="20,0,0,0" IsVisible="{Binding IsUserInputEnabled}" Text="{Binding UserInput, Mode=TwoWay}" Watermark="  [Enter profile name]" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <Button Margin="20" Width="200" Content="Dismiss"  Click="CloseHandler" HorizontalAlignment="Right" />
            <Button Margin="20" Width="200" Content="OK" Command="{Binding Submit}" HorizontalAlignment="Right" />
        </StackPanel>
    </StackPanel>
</UserControl>
