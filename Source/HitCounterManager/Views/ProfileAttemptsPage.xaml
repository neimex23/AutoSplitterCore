<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:common="clr-namespace:HitCounterManager.Common;assembly=HitCounterManager"
        xmlns:local="clr-namespace:HitCounterManager.ViewModels;assembly=HitCounterManager"
        x:Class="HitCounterManager.Views.ProfileAttemptsPage"
        x:DataType="local:ProfileAttemptsPageViewModel"
        Icon="/Resources/FireIcon.ico"
        Title="Attempts" Classes="DialogWindow"
        MinWidth="500" MinHeight="130" Width="500" Height="130">

    <Window.DataContext>
        <local:ProfileAttemptsPageViewModel />
    </Window.DataContext>

    <StackPanel Margin="10" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TextBlock Margin="0,0,0,5" Text="Setting attempts count..." HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial" FontSize="14" FontWeight="Bold" />
        <NumericUpDown Margin="20,0,0,0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" AllowSpin="True" ShowButtonSpinner="True" Watermark="999"
                       Value="{Binding UserInput}" Minimum="0" Maximum="{DynamicResource Int32MaxValueAsDouble}" ClipValueToMinMax="True" ParsingNumberStyle="Integer" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <Button Margin="20" Width="200" Content="Dismiss" Command="{Binding $parent[Window].Close}" HorizontalAlignment="Right"/>
            <Button Margin="20" Width="200" Content="OK" Command="{Binding Submit}" HorizontalAlignment="Right"/>
        </StackPanel>
    </StackPanel>
</Window>
